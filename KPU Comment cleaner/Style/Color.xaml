<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:KPU_Comment_cleaner.Style">
    <Color x:Key="DefaultBackground">#252525</Color>
    <SolidColorBrush x:Key="DefaultBackgroundBrush" Color="{StaticResource DefaultBackground}" />

    <Color x:Key="LightBackground">#323232</Color>
    <SolidColorBrush x:Key="LightBackgroundBrush" Color="{StaticResource LightBackground}" />

    <Color x:Key="Disable">Gray</Color>
    <SolidColorBrush x:Key="DisableBrush" Color="{StaticResource Disable}" />

    <Color x:Key="Highlight">Orange</Color>
    <SolidColorBrush x:Key="HighlightBrush" Color="{StaticResource Highlight}" />

    <Color x:Key="Active">#009bff</Color>
    <SolidColorBrush x:Key="ActiveBrush" Color="{StaticResource Active}" />

    <Color x:Key="MainText">White</Color>
    <SolidColorBrush x:Key="MainTextBrush" Color="{StaticResource MainText}" />
    
    <Color x:Key="Error">#d12b19</Color>
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource Error}" />
</ResourceDictionary>